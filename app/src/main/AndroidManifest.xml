<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.miracledmi">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="AllowBackup">
    <activity
        android:configChanges="orientation|screenSize"
        android:label="Hasil Treading"
        android:name=".view.ResultActivity"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.bot.BotProgressBarAndChartGoneActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.bot.BotChartGoneActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.bot.BotProgressBarGoneActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.bot.BotActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.HomeActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.LoginActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:configChanges="orientation|screenSize"
        android:name=".view.MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>

        <action android:name="android.intent.action.VIEW"/>
      </intent-filter>
    </activity>
  </application>

</manifest>